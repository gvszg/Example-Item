<div class="panel-body">
  <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
    <thead>
      <tr>
        <th>商品編號</th>
        <th>商品圖片</th>
        <th>商品名稱</th>
        <th>商品價格</th>
        <th>操作選項</th>
      </tr>
    </thead>
    <tbody>
      <% @category.items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item) do %>
              <%= image_tag(item.photos.first.image.thumb.url) if item.photos.first.present? %>
            <% end %>
          </td>
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <td><%= item.price %></td>
          <td>
            <div class="dropdown">
              <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                按此選擇
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu list-group" aria-labelledby="dropdownMenu4">
                <li><%= link_to "編輯", edit_admin_item_path(item) %></li>
                <li><%= link_to "圖片", admin_item_photos_path(item) %></li>
                <li><%= link_to "樣式", admin_item_item_specs_path(item) %></li>
                <li><%= link_to "刪除", admin_item_path(item), method: :delete, data: { confirm: "確定刪除？", disable_with: "刪除中..." } %></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>