.row
  .col-md-12.panel-warning
    .content-box-header.panel-heading
      .panel-title 銷售成本與盈餘
    .content-box-large.box-with-header
      .page-type
        %ul.nav.nav-tabs
          %li.active{:role => "presentation"}
            = link_to "銷售盈餘查詢", sales_income_result_admin_sales_reports_path
          %li{:role => "presentation"}
            = link_to "成本資料輸入", cost_statistics_index_admin_sales_reports_path
      .panel-body
        .input-new-cost-data
          = form_tag sales_income_result_admin_sales_reports_path, { class: "form-horizontal well", method: :get } do
            .form-group
              = label_tag :start_cost_date, "查詢起始日期", class: "col-sm-2 control-label"
              .col-sm-3
                = date_field_tag :start_cost_date, nil, {  class: "form-control", placeholder: "請輸入起始日期", required: true }
            .form-group
              = label_tag :end_cost_date, "查詢結束日期", class: "col-sm-2 control-label"
              .col-sm-3
                = date_field_tag :end_cost_date, nil, {  class: "form-control", placeholder: "請輸入結束日期", required: true }
            .form-group
              .col-sm-offset-2.col-sm-3
                = submit_tag "確認", class: "btn btn-primary"
                = link_to "取消"
        %hr
        %p.lead 盈餘查詢結果
        %p.lead 查詢日期範圍：#{params[:start_cost_date]} -- #{params[:end_cost_date]}
        %table.table.table-striped.table-bordered{:border => "0", :cellpadding => "0", :cellspacing => "0"}
          %thead
            %tr
              %th 總銷售金額
              %th 總貨物成本
              %th 總進貨物流費
              %th 總出貨物流費
              %th 總訂單數
              %th 總毛利
              %th 平均訂單毛利
              %th 總廣告費用
              %th 平均廣告費用
              %th 平均訂單盈餘
          %tbody
            %tr
              %td= @total_sales_income
              %td= @total_cost_of_goods
              %td= @total_cost_of_freight_in
              %td= @total_cost_ship_fee
              %td= @total_order_amount
              %td= @total_sales_income - @total_cost_of_goods - @total_cost_of_freight_in - @total_cost_ship_fee
              %td= (@total_sales_income - @total_cost_of_goods - @total_cost_of_freight_in - @total_cost_ship_fee) / @total_order_amount
              %td= @total_cost_of_advertising
              %td= @total_cost_of_advertising / @total_order_amount
              %td= ((@total_sales_income - @total_cost_of_goods - @total_cost_of_freight_in - @total_cost_ship_fee) / @total_order_amount) - (@total_cost_of_advertising / @total_order_amount)