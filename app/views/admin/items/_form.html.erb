<div class="row">
  <div class="col-md-10">
    <div class="content-box-large">
      <div class="breadcrumb-topbar">
      <ol class="breadcrumb">
        <li><a href="#">萌萌屋</a></li>
        <li class="<%= "active" if current_page?(new_admin_item_path) %>">
          <%= action_name == "new" ? "新增商品" : "編輯商品" %>
        </li>
      </ol>
    </div>
      <div class="panel-heading">
        <div class="panel-title">
          <%= item_title %>          
        </div>
          <div class="panel-options">
            <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
            <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
          </div>
        </div>
      <div class="panel-body">
        <%= form_for [:admin, @item], html: { class: "form-horizontal" } do |f| %>

          <div class="form-group">
            <%= f.label :name, "商品名稱", class: "col-sm-2 control-label" %>            
            <div class="col-sm-10">
              <%= f.text_field :name, class: "form-control", placeholder: "請輸入名稱", required: true %>
            </div>
          </div>

          <div class="form-group">            
            <%= f.label :price, "商品價格", class: "col-sm-2 control-label" %>    
            <div class="col-sm-10">
              <%= f.number_field :price, class: "form-control", placeholder: "請輸入價格", required: true %>
            </div>
          </div>

          <div class="form-group">            
            <%= f.label :description, "商品描述", class: "col-sm-2 control-label" %>    
            <div class="col-sm-10">
              <%= f.cktext_area :description, rows: 6, class: "form-control", placeholder: "請輸入描述", :ckeditor => {:language => 'zh-TW'}, required: true %>
            </div>
          </div>
                    
          <div class="form-group">
            <%= f.label "商品分類", class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                <%= cb.label(class: "checkbox-inline") {cb.check_box(class: "checkbox") + cb.text} %>
              <% end %>
            </div>                   
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "確認送出", class: "btn btn-primary" %>
              <%= link_to "取消離開", admin_categories_path, class: "btn btn-warning" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>