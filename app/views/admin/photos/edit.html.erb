<div class="row">
  <div class="col-md-10">
    <div class="content-box-large">
      <div class="panel-heading">
        <div class="panel-title">
           編輯圖片<br>          
        </div>
        <div class="panel-options">
          <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
          <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
        </div>
      </div>

      <div class="panel-body">
        <!-- <div>
          <p class="">商品名稱： <%= @item.name %></p>
          <p class="">商品名稱： <%= image_tag(@photo.image.thumb.url) %></p>
        </div> -->
        
        <%= form_for [:admin, @item, @photo], html: { id: "photo-#{@photo.id}-edit", class: "form-horizontal" } do |f| %>
          <div class="form-inputs">
            <div class="form-group has-success has-feedback">            
              <%= f.label :photo_intro, "圖片描述", class: "col-sm-2 control-label" %>    
              <div class="col-sm-10">
                <%= f.cktext_area :photo_intro, rows: 6, class: "form-control", placeholder: "請輸入描述", :ckeditor => {:language => 'zh-TW'} %>        
              </div>
            </div>
          </div>
          <div class="actions">
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "確認送出", class: "btn btn-primary" %>
                <%= link_to "取消離開", admin_item_photos_path(@item), class: "btn btn-warning" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>