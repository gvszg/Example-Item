<div class="panel-title ">商品樣式列表</div>
<div class="panel-body">
  <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
    <div class="pull-left">
      <p class="lead">商品名稱：<%= @item.name %></p>
    </div>
    <div class="pull-right">
      <%= link_to "返回上頁", admin_item_path(@item), class: "btn btn-default btn-sm" %>
      <%= link_to "新增樣式", new_admin_item_item_spec_path(@item), class: "btn btn-primary btn-sm" %>
    </div>
    <thead>
      <tr>
        <th>樣式圖片</th>
        <th>樣式名稱</th>
        <th>樣式數量</th>
        <th>操作選項</th>
      </tr>
    </thead>
    <tbody>
      <% @item_specs.each do |spec| %>
        <tr>
          <td>            
            <%= image_tag(spec.style_pic.url) if spec.style_pic.present? %>
          </td>
          <td><%= spec.style %></td>
          <td><%= spec.style_amount %></td>
          <td>
            <%= link_to "編輯樣式", "#" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>