<div class="panel-body">
  <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
    <div class="pull-right">
      <%= link_to "返回上頁", staff_item_path(@item), class: "btn btn-default btn-sm" %>
      <%= link_to "新增圖片", new_staff_item_photo_path, class: "btn btn-primary btn-sm" %>
    </div>
    <div class="breadcrumb-topbar">
      <ol class="breadcrumb">
        <li><a href="<%= staff_root_path %>">萌萌屋</a></li>
        <li><a href="<%= staff_item_path(@item) %>"><%= @item.name %></a></li>
        <li class="<%= "active" if current_page?(controller: "staff/photos") %>">
          圖片列表
        </li>
      </ol>
    </div>
    <thead>
      <tr>
        <th>圖片</th>
        <th>圖片敘述</th>
        <th>操作選項</th>
      </tr>
    </thead>
    <tbody>
      <% @photos.each do |photo| %>
        <tr>
          <td>
            <%= item_photo(photo, "thumb") %>
          </td>
          <td><%= raw photo.photo_intro %></td>
          <td>            
            <%= button_tag "編輯", data: { toggle: "modal", target: "#photo-#{photo.id}-edit" }, type: "button", class: "btn btn-default btn-xs" %>
            <%= render partial: "edit_form", locals: { photo: photo } %>
            <%= link_to "刪除", staff_item_photo_path(@item, photo), method: :delete, data: { confirm: "確定刪除?", disable_with: "刪除中..." }, class: "btn btn-danger btn-xs" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="well">    
    <%= form_for [:staff, @item, Photo.new], html: { class: "form-horizontal well" } do |f| %>
      <p class="lead">新增圖片</p>
      <div class="form-group">
        <%= f.label :photo_intro, "圖片說明", class: "col-sm-2 control-label" %>
        <div class="col-sm-5">
          <%= f.text_field :photo_intro, class: "form-control", placeholder: "請輸入名稱" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :image, "上傳圖片", class: "col-sm-2 control-label" %>
        <div class="col-sm-5">
          <%= f.file_field :image, multiple: true, name: "photo[image]" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= link_to "顯示所有新增的圖片", staff_item_photos_path(@item), class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>